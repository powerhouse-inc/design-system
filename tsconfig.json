{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["./src/*"]
        }
    },

    "types": ["jest", "@testing-library/jest-dom"],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".storybook/**/*.ts",
        ".storybook/**/*.tsx"
    ],
    "exclude": ["dist", "node_modules"]
}
